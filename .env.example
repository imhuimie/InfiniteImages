# InfiniteImages 配置文件示例
# 复制此文件为 .env 并根据需要修改

# 服务器配置
SERVER_ADDR=0.0.0.0:6868
DEBUG_MODE=true

# API 密钥配置
# 强烈建议设置一个复杂的 API 密钥
API_KEY=your_api_key_here

# 存储配置
# 支持的存储类型: local, s3, ftp
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=static/images

# S3 存储配置 (当 STORAGE_TYPE=s3 时需要)
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET=your-bucket-name
CUSTOM_DOMAIN=https://cdn.yourdomain.com

# FTP 存储配置 (当 STORAGE_TYPE=ftp 时需要)
FTP_HOST=ftp.example.com
FTP_PORT=21
FTP_USERNAME=username
FTP_PASSWORD=password
FTP_PATH=/images

# 图像处理配置
MAX_UPLOAD_SIZE=10485760  # 10MB
MAX_UPLOAD_COUNT=20
IMAGE_QUALITY=80
WORKER_THREADS=4
COMPRESSION_EFFORT=6
FORCE_LOSSLESS=false

# 安全配置
ALLOWED_ORIGINS=*
JWT_SECRET=your_jwt_secret_here
IP_WHITELIST=
IP_BLACKLIST=

# 功能开关
ENABLE_WATERMARK=false
ENABLE_EXIF_STRIP=true
ENABLE_AUTO_CLEAN=true
ENABLE_NSFW_DETECTION=false

# 水印配置 (当 ENABLE_WATERMARK=true 时使用)
WATERMARK_TYPE=text
WATERMARK_TEXT=InfiniteImages
WATERMARK_FONT=
WATERMARK_SIZE=24
WATERMARK_COLOR=#ffffff
WATERMARK_OPACITY=50
WATERMARK_POSITION=bottom-right
WATERMARK_IMAGE_PATH=

# 缓存配置
ENABLE_CACHE=true
CACHE_TTL=3600

# 日志配置
LOG_LEVEL=info  # debug, info, warn, error
LOG_FILE=logs/app.log